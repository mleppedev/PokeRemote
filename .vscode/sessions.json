{
  "$schema": "https://cdn.statically.io/gh/nguyenngoclongdev/cdn/main/schema/v10/terminal-keeper.json",
  "theme": "tribe",
  "active": "default",
  "activateOnStartup": true,
  "keepExistingTerminals": false,
  "sessions": {
    "default": [
      {
        "name": "Server (.NET)",
        "autoExecuteCommands": false,
        "icon": "server",
        "color": "terminal.ansiBlue",
        "commands": [
          "cd server",
          "dotnet run --project PokeRemote.Server"
        ]
      },
      [
        {
          "name": "React-Native Metro",
          "icon": "browser",
          "color": "terminal.ansiMagenta",
          "commands": [
            "cd client",
            "npm start"
          ]
        },
        {
          "name": "Android Deploy",
          "icon": "device-mobile",
          "color": "terminal.ansiGreen",
          "commands": [
            "cd client",
            "npm run android"
          ]
        }
      ],
      [
        {
          "name": "Scripts Android",
          "icon": "tools",
          "color": "terminal.ansiYellow",
          "commands": [
            "cd d:\\src\\poke",
            "@echo ===== Scripts disponibles =====",
            "@echo - setup-android.bat: Configurar entorno Android",
            "@echo - build-android.bat: Construir APK",
            "@echo - rebuild-android.bat: Reconstruir proyecto Android",
            "@echo - regenerate-android.bat: Regenerar archivos nativos",
            "@echo - verify-android.bat: Verificar SDK de Android",
            "@echo - run-android.bat: Instalar y ejecutar en dispositivo",
            "@echo =============================="
          ]
        },
        {
          "name": "ADB Devices",
          "icon": "device-mobile",
          "color": "terminal.ansiCyan",
          "commands": [
            "adb devices -l"
          ]
        }
      ],
      [
        {
          "name": "WebRTC Debug",
          "icon": "debug",
          "color": "terminal.ansiMagenta",
          "commands": [
            "cd client",
            "@echo ===== Depuración WebRTC =====",
            "@echo - Verificando conexión WebRTC...",
            "npx react-native log-android | findstr \"WebRTC\""
          ]
        },
        {
          "name": "API Tests",
          "icon": "beaker",
          "color": "terminal.ansiGreen",
          "commands": [
            "cd server",
            "dotnet test PokeRemote.Tests"
          ]
        }
      ]
    ],
    "development": [
      {
        "name": "Start Server",
        "autoExecuteCommands": true,
        "icon": "play",
        "color": "terminal.ansiBlue",
        "commands": [
          "start-server.bat"
        ]
      },
      {
        "name": "Run Android",
        "autoExecuteCommands": true,
        "icon": "rocket",
        "color": "terminal.ansiGreen",
        "commands": [
          "run-android-full.bat"
        ]
      }
    ],
    "build": [
      {
        "name": "Install Dependencies",
        "autoExecuteCommands": false,
        "icon": "package",
        "color": "terminal.ansiBlue",
        "commands": [
          "install-dependencies.bat"
        ]
      },
      {
        "name": "Build Release APK",
        "autoExecuteCommands": false,
        "icon": "gear",
        "color": "terminal.ansiYellow",
        "commands": [
          "build-android.bat"
        ]
      },
      {
        "name": "Clean and Rebuild",
        "autoExecuteCommands": false,
        "icon": "refresh",
        "color": "terminal.ansiMagenta",
        "commands": [
          "rebuild-android.bat"
        ]
      }
    ],
    "diagnostics": [
      {
        "name": "Verify Setup",
        "autoExecuteCommands": true,
        "icon": "check-all",
        "color": "terminal.ansiGreen",
        "commands": [
          "cd d:\\src\\poke",
          "@echo ===== Verificando entorno de desarrollo =====",
          "node -v",
          "npm -v",
          "adb version",
          "dotnet --version",
          "cd client && npm list react-native",
          "cd ../server && dotnet list package | findstr \"WebRTC\""
        ]
      },
      {
        "name": "Network Test",
        "autoExecuteCommands": false,
        "icon": "globe",
        "color": "terminal.ansiBlue",
        "commands": [
          "cd d:\\src\\poke\\client\\src\\utils",
          "@echo ===== Prueba de conectividad =====",
          "@echo - Probando conexiones STUN...",
          "ping -n 3 stun.l.google.com",
          "@echo - Verificando puertos...",
          "netstat -an | findstr \"3478\""
        ]
      }
    ]
  }
}